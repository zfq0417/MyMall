<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#ccc"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <ImageView
            android:id="@+id/item_home_hot_iv_img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_30"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_home_hot_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="商品"
            android:textSize="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@id/item_home_hot_iv_img"
            app:layout_constraintTop_toTopOf="@id/item_home_hot_iv_img" />

        <TextView
            android:id="@+id/item_home_hot_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="商品"
            android:textColor="#D6D5D5"
            android:textSize="@dimen/dp_13"
            app:layout_constraintBottom_toBottomOf="@id/item_home_hot_iv_img"
            app:layout_constraintLeft_toRightOf="@id/item_home_hot_iv_img"
            app:layout_constraintTop_toTopOf="@id/item_home_hot_iv_img" />

        <TextView
            android:id="@+id/item_home_hot_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="￥9.99"
            android:textColor="#C30000"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/item_home_hot_iv_img"
            app:layout_constraintLeft_toRightOf="@id/item_home_hot_iv_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>