<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.own.OwnFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="我的"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_tct_sound_bai"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@id/b"
                android:src="@mipmap/icon_dian" />

            <View
                android:id="@+id/b"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@id/a"
                android:background="#EFEFEF" />

            <ImageView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_yuanhuna" />

        </RelativeLayout>


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="#333333">

        <ImageView
            android:id="@+id/own_iv_head"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_50"
            android:src="@mipmap/icon_own_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/own_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="点击登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/own_iv_head"
            app:layout_constraintLeft_toRightOf="@id/own_iv_head"
            app:layout_constraintTop_toTopOf="@id/own_iv_head" />

        <TextView
            android:id="@+id/own_tv_loginname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="名字"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/own_iv_head"
            app:layout_constraintLeft_toRightOf="@id/own_iv_head"
            app:layout_constraintTop_toTopOf="@id/own_iv_head" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/icon_fan"
            app:layout_constraintBottom_toBottomOf="@id/own_iv_head"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/own_iv_head" />

        <Button
            android:id="@+id/btn_tui"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="退出登录"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="@id/own_tv_login"
            app:layout_constraintTop_toBottomOf="@id/own_tv_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_din"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的订单"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_you"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="优惠卷"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_li"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的订单"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_own"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的收藏"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_zu"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的足迹"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hui"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="会员福利"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="地址管理"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_zhang"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="账号安全"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lian"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="联系客服"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">

            <!--layout_bang-->
            <LinearLayout
                android:id="@+id/layout_bang"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="帮助中心"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_yi"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:background="@drawable/shape_txt_border_black"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@mipmap/ic_yi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="意见反馈"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>